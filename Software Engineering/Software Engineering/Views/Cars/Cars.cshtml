                    <li class="active"><a href="/" style="color: white;">HOME</a> </li>
                    </li>
                    <li class="active"><a href="/Cars/Cars" style="color: white;">CARS</a> </li>
                </ul>
            </div>
        </nav>
    </div>
    <!--_______________________________________ Carousel__________________________________ -->
    <!-- ________________________LATEST CARS SECTION _______________________-->
    <div class="latestcars">
        <h1 class="text-center">&bullet; LATEST   CARS &bullet;</h1>
    @{ 
        int i = 0;
    }
    @foreach(var item in Model)
    {
        var base64="";
        var imgsrc = "";
        if (item.Image != null)
        {
            base64 = Convert.ToBase64String(item.Image);
            imgsrc = string.Format("data:image/gif;base64,{0}", base64);
        }
        if (i % 4 == 0)
        {
            @:<div class="row">
        }
        @:<div class='column'>
            @:<div class='card'>
            @:<p style="font-family: verdana; font-size:170%;"><b>@Html.DisplayFor(modelItem => item.Make) @Html.DisplayFor(modelItem => item.Model)</b></p><hr style="border:1px solid black;" />
            if (item.Image != null) {
                @: <img src="@imgsrc" style="width:100%; height:55%;" /><hr style="border:1px solid black;" />
                }
            else
            {
                @: <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/6/6c/No_image_3x4.svg/1280px-No_image_3x4.svg.png" style="width:300px; height:200px;" /><hr style="border:1px solid black;"/>
            }
                @:<p style="font-family: courier; font-size:110%; float:left;padding-left: 25px;">Year: @Html.DisplayFor(modelItem => item.Year)</p>
                @:<p style="font-family: courier; font-size:110%; float: right; padding-right: 25px;">CC: @Html.DisplayFor(modelItem => item.CC)</p>
            @:</div>
         @:</div>
        if (i % 4 == 3)
        {
            @:</div><br>
            
        }
        i = i + 1;
    }
    </div>
        <br>
        <br>
